@model List<LulukaBankIdentityProject.EntityLayer.Concrete.CustomerAccount>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/CustomerLayout/Index.cshtml";
}

<div class="right_col" role="main">
	<div class="">
		<div class="page-title">
			<div class="title_left">
				<h3>IBAN and Account Info</h3>
			</div>
		</div>

		<div class="clearfix"></div>

		<div class="row">
			<div class="col-md-12">
				<div class="">
					<div class="x_content">
						<div class="row">
							<div class="col-md-12">
								<div class="x_panel">
									<div class="x_title">
										<h2>Account Numbers</h2>
										<ul class="nav navbar-right panel_toolbox">
											<li>
												<a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
											</li>

											<li>
												<a class="close-link"><i class="fa fa-close"></i></a>
											</li>
										</ul>
										<div class="clearfix"></div>
									</div>
									<div class="x_content bs-example-popovers">

										@foreach (var item in Model)
										{
											if (item.CustomerAccountCurrency=="Euro")
											{
												<div class="alert alert-success alert-dismissible fade in" role="alert">
													<button type="button" class="close" data-dismiss="alert" aria-label="Close">
														<span aria-hidden="true">IBAN Copy</span>
													</button>
													<strong>Account Currency: @item.CustomerAccountCurrency</strong> Bank Branch: @item.BankBranch - Account Number: @item.CustomerAccountNumber
												</div>
											}
											if (item.CustomerAccountCurrency == "TL")
											{
												<div class="alert alert-danger alert-dismissible fade in" role="alert">
													<button type="button" class="close" data-dismiss="alert" aria-label="Close">
														<span aria-hidden="true">IBAN Copy</span>
													</button>
													<strong>Account Currency: @item.CustomerAccountCurrency</strong> Bank Branch: @item.BankBranch - Account Number: @item.CustomerAccountNumber
												</div>
											}
											if (item.CustomerAccountCurrency=="US")
											{
												<div class="alert alert-warning alert-dismissible fade in" role="alert">
													<button type="button" class="close" data-dismiss="alert" aria-label="Close">
														<span aria-hidden="true">IBAN Copy</span>
													</button>
													<strong>Account Currency: @item.CustomerAccountCurrency</strong> Bank Branch: @item.BankBranch - Account Number: @item.CustomerAccountNumber
												</div>
											}
										}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


