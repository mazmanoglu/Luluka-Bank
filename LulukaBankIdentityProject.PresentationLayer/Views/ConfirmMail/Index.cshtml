@model ConfirmMailViewModel

@{
    Layout = null;
}

<!--
   We added (drag and drop) wwwroot/lib/bootstrap/dist/css/bootstrap.css, then we keep just min.css, others deleted
   We added model
-->
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
   <br />
   <br />
   <form method="post">
      <h2>Ported mail address: @ViewBag.v</h2>
      <br />
      <label>User ID</label>
      <input type="text" class="form-control" asp-for="Mail" value="@ViewBag.v"/>
      <br />
      <label>Enter the 6-digit code sent to your e-mail address.</label>
      <input type="text" class="form-control" asp-for="ConfirmCode" />
      <br />
      <button class="btn btn-primary">Activate the Account</button>
   </form>
</div>

