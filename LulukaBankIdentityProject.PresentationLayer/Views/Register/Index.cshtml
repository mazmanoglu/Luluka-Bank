	<h1>LULUKA BANK REGISTRATION FORM</h1>
	
	<div class="w3layoutscontaineragileits">
		<h2>New Customer</h2>
		<form method="post">
			<input type="text" asp-for="FirstName" placeholder="First Name" required="">
			<input type="text" asp-for="LastName" placeholder="Last Name" required="">
			<input type="text" asp-for="Username" placeholder="Username" required="">
			<input type="email" asp-for="Email" placeholder="Email" required="">
			<input type="password" asp-for="Password" placeholder="Password" required="">
			<input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">

			<div class="text-white" asp-validation-summary="ModelOnly"></div> <!--To show password error explanation-->
			<br /><br />

			<ul class="agileinfotickwthree">
				<li>
					<input type="checkbox" id="brand1" value="">
					<label for="brand1"><span></span>I Accept Terms&Conditions</label>
					<a href="/Login/Index">Have an account?</a>
				</li>
			</ul>
			<div class="aitssendbuttonw3ls">
				<input type="submit" value="REGISTER">
				<p>Go to Home Page<span>→</span><a href="/Home/Index">LULUKA BANK.</a></p>
				<div class="clear"></div>
			</div>
		</form>
	</div>

