@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/CustomerLayout/Index.cshtml";
}

<div class="right_col" role="main">
	<div class="">
		<div class="page-title">
			<div class="title_left">
				<h3>Bill Payment</h3>
			</div>
		</div>
		<div class="clearfix"></div>

		<div class="row">

			<div class="col-md-12 col-sm-12 col-xs-12">
				<div class="x_panel">
					<div class="x_title">
						<h2>Electric Bill</h2>
						<ul class="nav navbar-right panel_toolbox">
							<li>
								<a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
							</li>
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
								<ul class="dropdown-menu" role="menu">
									<li>
										<a href="#">Settings 1</a>
									</li>
									<li>
										<a href="#">Settings 2</a>
									</li>
								</ul>
							</li>
							<li>
								<a class="close-link"><i class="fa fa-close"></i></a>
							</li>
						</ul>
						<div class="clearfix"></div>
					</div>
					<div class="x_content">


						<!-- Smart Wizard -->
						<p>To pay the electric bill, please fill your information and click payment button.</p>
						<div id="wizard" class="form_wizard wizard_horizontal">
							<ul class="wizard_steps">
								<li>
									<a href="#step-1">
										<span class="step_no">1</span>
										<span class="step_descr">
											Step 1<br />
											<small>Customer and Bill Info</small>
										</span>
									</a>
								</li>
								<li>
									<a href="#step-2">
										<span class="step_no">2</span>
										<span class="step_descr">
											Step 2<br />
											<small>View the Amount</small>
										</span>
									</a>
								</li>
								<li>
									<a href="#step-3">
										<span class="step_no">3</span>
										<span class="step_descr">
											Step 3<br />
											<small>Payment Process</small>
										</span>
									</a>
								</li>
								<li>
									<a href="#step-4">
										<span class="step_no">4</span>
										<span class="step_descr">
											Step 4<br />
											<small>Details of the Process</small>
										</span>
									</a>
								</li>
							</ul>
							<div id="step-1">
								<form class="form-horizontal form-label-left">

									<div class="form-group">
										<label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
											Customer Full Name <span class="required">*</span>
										</label>
										<div class="col-md-6 col-sm-6 col-xs-12">
											<input type="text" id="first-name" required="required" class="form-control col-md-7 col-xs-12">
										</div>
									</div>
									<div class="form-group">
										<label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
											Contract Number <span class="required">*</span>
										</label>
										<div class="col-md-6 col-sm-6 col-xs-12">
											<input type="text" id="last-name" name="last-name" required="required" class="form-control col-md-7 col-xs-12">
										</div>
									</div>
									<button class="btn btn-primary">Debt Inquiry</button>
								</form>

							</div>
							<div id="step-2">
								<h2 class="StepTitle">Debt Details</h2>
								<form class="form-horizontal form-label-left">

									<div class="form-group">
										<label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
											Customer Full Name
										</label>
										<div class="col-md-6 col-sm-6 col-xs-12">
											<input type="text" id="first-name" readonly class="form-control col-md-7 col-xs-12">
										</div>
									</div>
									<div class="form-group">
										<label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
											Contract Number 
										</label>
										<div class="col-md-6 col-sm-6 col-xs-12">
											<input type="text" id="last-name" name="last-name" readonly class="form-control col-md-7 col-xs-12">
										</div>
									</div>
									<div class="form-group">
										<label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
											Amount
										</label>
										<div class="col-md-6 col-sm-6 col-xs-12">
											<input type="text" id="last-name" name="last-name" readonly class="form-control col-md-7 col-xs-12">
										</div>
									</div>
								</form>
							</div>
							<div id="step-3">
								<h2 class="StepTitle">Payment Step</h2>
								<form class="form-horizontal form-label-left">

									<div class="form-group">
										<label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
											Card Owner Full Name
										</label>
										<div class="col-md-6 col-sm-6 col-xs-12">
											<input type="text" id="first-name" readonly class="form-control col-md-7 col-xs-12">
										</div>
									</div>
									<div class="form-group">
										<label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
											Card Number
										</label>
										<div class="col-md-6 col-sm-6 col-xs-12">
											<input type="text" id="last-name" name="last-name" readonly class="form-control col-md-7 col-xs-12">
										</div>
									</div>
									<div class="form-group">
										<label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
											End Date
										</label>
										<div class="col-md-6 col-sm-6 col-xs-12">
											<input type="text" id="last-name" name="last-name" readonly class="form-control col-md-7 col-xs-12">
										</div>
									</div>
									<div class="form-group">
										<label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
											CVC Number
										</label>
										<div class="col-md-6 col-sm-6 col-xs-12">
											<input type="text" id="last-name" name="last-name" readonly class="form-control col-md-7 col-xs-12">
										</div>
									</div>
									<button class="btn btn-dark">Process the Payment</button>
								</form>
							</div>
							<div id="step-4">
								<h2 class="StepTitle">Payment Result</h2>
								<p>
									Transaction completed.
								</p>
								<p>
									Transaction failed.
								</p>
							</div>

						</div>
						<!-- End SmartWizard Content -->
					</div>
				</div>
			</div>
		</div>
	</div>
</div>